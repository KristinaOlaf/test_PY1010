#Oppgave 5

import math

def figur_info(a, b):
    # Radius til halvsirkel
    r = a / 2
    
    # Areal
    areal_trekant = (a * b) / 2
    areal_halvsirkel = (math.pi * r**2) / 2
    areal_total = areal_trekant + areal_halvsirkel
    
    # Omkrets (ytre)
    hypotenus = math.sqrt(a**2 + b**2)
    omkrets = b + hypotenus + (math.pi * r)
    
    return areal_total, omkrets

# Eksempelbruk:
a = float(input("Skriv inn a (grunnlinje/diameter): "))
b = float(input("Skriv inn b (høyde): "))

areal, omkrets = figur_info(a, b)
print(f"Arealet av figuren er {areal:.3f} kvadrat-enheter.")
print(f"Ytre omkrets av figuren er {omkrets:.3f} enheter.")

Skriv inn a (grunnlinje/diameter):  6
Skriv inn b (høyde):  8
Arealet av figuren er 38.137 kvadrat-enheter.
Ytre omkrets av figuren er 27.425 enheter.


#Oppgave 6

import numpy as np
import matplotlib.pyplot as plt

# Definer x-verdier
x = np.linspace(-10, 10, 200)

# Definer funksjonen f(x) = -x^2 - 5
y = -x**2 - 5

# Lag plottet
plt.figure(figsize=(8, 6))
plt.plot(x, y, color='blue', label=r'$f(x) = -x^2 - 5$')

# Legg til rutenett, akser og tittel
plt.grid(True)
plt.xlabel('x')
plt.ylabel('f(x)')
plt.title('Plot av f(x) = -x² - 5')
plt.axhline(0, color='black', linewidth=1)  # x-akse
plt.axvline(0, color='black', linewidth=1)  # y-akse

# Marker toppunktet
plt.scatter(0, -5, color='red', zorder=5)
plt.text(0, -5, '(0, -5)', fontsize=10, ha='left', va='bottom')

# Legg til legend
plt.legend()
plt.show()




